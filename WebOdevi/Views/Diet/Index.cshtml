@model WebOdevi.Models.ViewModels.DietInputViewModel

@{
    ViewData["Title"] = "Diyet Önerisi";
}

<div class="container  " style="margin-top:30px; padding:90px 20px; color:white ;">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6 main-card p-5">

<form asp-action="GenerateDiet" method="post">
        <div class="col-md-12 diet-container ">
        <label>Boy (cm)</label>
        <input asp-for="Height" class="form-control" />
        <span asp-validation-for="Height"></span>
         </div>

        <div class="col-md-12 diet-container ">
        <label>Kilo (kg)</label>
        <input asp-for="Weight" class="form-control" />
        <span asp-validation-for="Weight"></span>
    </div>

        <div class="col-md-12 diet-container ">
        <label>Vücut Tipi</label>
        <select asp-for="BodyType" class="form-control">
            <option value="">Seçiniz</option>
            <option>Endomorph</option>
            <option>Mesomorph</option>
            <option>Ectomorph</option>
        </select>
    </div>

        <div class="col-md-12 diet-container ">
        <label>Hedef</label>
        <select asp-for="Goal" class="form-control">
            <option value="">Seçiniz</option>
            <option>Kilo Verme</option>
            <option>Kilo Alma</option>
            <option>Koru</option>
        </select>
    </div>

        <button type="submit" class="btn btn-purple btn-lg">
            Plan Oluştur
        </button>
</form>

@if (ViewBag.DietPlan != null)
{
    <div class="card mt-4 shadow border-0">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0">Yapay Zeka Önerisi</h5>
        </div>
        <div class="card-body">
            <p style="white-space: pre-line;">@ViewBag.DietPlan</p>
        </div>
    </div>
}
    <script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
    <script>
        var content = document.querySelector(".card-body p");
        if(content) {
            content.innerHTML = marked.parse(content.innerText);
        }
    </script>
</div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<style>
    .btn-purple {
        padding:7px;
        margin: 5px 0;
        background-color: #6f42c1;
        border-color: #6f42c1;
        color: white;
    }

    .btn-purple:hover {
        background-color: #5a32a3;
        border-color: #5a32a3;
        color: white;
    }
</style>