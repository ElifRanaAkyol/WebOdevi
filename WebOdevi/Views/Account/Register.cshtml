@model WebOdevi.Models.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Kayıt Ol";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center align-items-center" style="min-height: 85vh; margin-top:120px;">
        <div class="col-sm-10 col-md-6 col-lg-4">
            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                <div class="card-body p-4 p-md-5 bg-white">

                    <h2 class="text-center mb-4 fw-bold custom-header-color">Kayıt Ol</h2>

                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger small py-2 border-0 rounded-3 mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-semibold text-dark">E-posta</label>
                            <input asp-for="Email" class="form-control rounded-3 bg-light border-0 py-2" placeholder="isim@example.com" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label fw-semibold text-dark">Ad Soyad</label>
                            <input asp-for="FullName" class="form-control rounded-3 bg-light border-0 py-2" placeholder="Adınız Soyadınız" />
                            <span asp-validation-for="FullName" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label fw-semibold text-dark">Şifre</label>
                            <input asp-for="Password" type="password" class="form-control rounded-3 bg-light border-0 py-2" placeholder="******" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ConfirmPassword" class="form-label fw-semibold text-dark">Şifre Tekrar</label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control rounded-3 bg-light border-0 py-2" placeholder="******" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>

                        @* Belirlediğiniz Koyu Mor Buton (#3f1a56) *@
                        <button type="submit" class="btn btn-lg w-100 rounded-3 fw-bold custom-btn-style py-2">Kayıt Ol</button>

                        <div class="text-center mt-4">
                            <span class="text-muted small">Zaten hesabınız var mı?</span>
                            <a href="/Account/Login" class="text-dark fw-bold small text-decoration-none ms-1">Giriş Yap</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

