@model WebOdevi.Models.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Kayıt Ol";
}

<div class="row justify-content-center" style="margin-top:120px; ">
    <div class="col-sm-10 col-md-4" style="background:white; padding:40px; border-radius:12px;">

        <h2 class="text-center mb-4 fw-bold custom-header-color">Kayıt Ol</h2>

        <form method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label class="form-label">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Ad Soyad</label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Şifre</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Şifre Tekrar</label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100 custom-btn-style">Kayıt Ol</button>

        </form>

    </div>
</div>

<style>
    /* Lütfen buradaki renk kodunu kendi özel renginizle değiştirin */
    :root {
        --custom-color: #007bff; /* Örnek Mavi */
    }

    /* Başlık rengini ayarlama */
    .custom-header-color {
        color: var(--custom-color) !important;
    }

    /* Buton rengini ve hover stilini ayarlama */
    .custom-btn-style {
        background-color: var(--custom-color) !important;
        border-color: var(--custom-color) !important;
        font-size: 1.1rem; /* Butonu biraz büyütmek isteyebilirsiniz */
    }

        .custom-btn-style:hover {
            background-color: darken(var(--custom-color), 10%) !important; /* Hafifçe koyulaştırma */
            border-color: darken(var(--custom-color), 10%) !important;
        }

    /* İsteğe bağlı olarak, input ve label fontlarını küçültebiliriz */
    .form-control {
        font-size: 0.9rem;
    }

    .form-label {
        font-size: 0.95rem;
    }

</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}