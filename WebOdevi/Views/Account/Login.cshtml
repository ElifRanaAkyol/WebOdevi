@model WebOdevi.Models.ViewModels.LoginVM

<div class="row mt-5 justify-content-center" style=" margin-top:120px; padding:100px 20px; ">
    <div class="col-sm-10 col-md-6 col-lg-4">
        <div class="card shadow-lg border-0 rounded-4">
            <div class="card-body p-4 p-md-5">

                <h2 class="text-center mb-4 fw-bold custom-header-color">Kullanıcı Girişi</h2>

                <form asp-action="Login" method="post">

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">E-posta Adresi</label>
                        <input asp-for="Email" class="form-control rounded-3" placeholder="örnek@eposta.com" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Şifre</label>
                        <input asp-for="Password" type="password" class="form-control rounded-3" placeholder="Şifrenizi girin" />
                    </div>

                   

                    <button type="submit" class="btn btn-primary btn-lg w-100 rounded-3 custom-btn-style">
                        Giriş Yap
                    </button>

                    
                </form>
            </div>
        </div>
    </div>
</div>
<style>
  

    .form-control {
        font-size: 0.875rem; 
        padding: 0.75rem 0.75rem;
    }

   
</style>