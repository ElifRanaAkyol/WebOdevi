@model WebOdevi.Models.Trainer

@{
    ViewData["Title"] = "Trainer Oluştur";
}

<style>
    html, body {
        background-color: #ffffff !important;
    }

    .page-wrapper {
        margin-top: 110px;
        background-color: #ffffff;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 0 10px rgba(0,0,0,0.08);
    }
</style>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="page-wrapper">

                <h2 class="text-center mb-4">Eğitmen Oluştur</h2>

                <form asp-action="Create" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="All    " class="text-danger"></div>

                    <div class="form-group mb-3">
                        <label asp-for="FullName"></label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label for="FitnessCenterId">Fitness Center</label>
                        <select asp-for="FitnessCenterId" class="form-control" asp-items="ViewBag.FitnessCenters">
                            <option value="">Seçiniz</option>
                        </select>
                    </div>

                    <div class="form-group mb-3">
                        <label>Uzmanlık Alanları</label>
                        <div class="border p-3 rounded" style="max-height: 180px; overflow-y: auto;">
                            @foreach (var s in ViewBag.Specializations)
                            {
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="SelectedSpecializationIds" value="@s.Id" />
                                    <label class="form-check-label">@s.Name</label>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <label>Hizmetler</label>
                        <div class="border p-3 rounded" style="max-height: 180px; overflow-y: auto;">
                            @foreach (var s in ViewBag.Services)
                            {
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="SelectedServiceIds" value="@s.Id" />
                                    <label class="form-check-label">@s.Name</label>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="form-group mb-3">
                        <label>Müsaitlik</label>

                        <div class="border p-3 rounded" style="max-height: 300px; overflow-y: auto;">

                            @foreach (WebOdevi.Data.Enums.DaysOfWeek day in Enum.GetValues(typeof(WebOdevi.Data.Enums.DaysOfWeek)))
                            {
                                <strong>@day</strong>
                                <div class="ms-3 mb-2">

                                    @for (int hour = 9; hour <= 20; hour++)
                                    {
                                        string hourText = hour.ToString("D2") + ":00";
                                        string value = $"{day}|{hourText}";

                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input"
                                                   type="checkbox"
                                                   name="SelectedAvailabilities"
                                                   value="@value" />

                                            <label class="form-check-label">@hourText</label>
                                        </div>
                                    }

                                </div>
                                <hr />
                            }

                        </div>
                    </div>


                    <button type="submit" class="btn btn-primary w-100 mt-3">Kaydet</button>

                </form>

                <div class="mt-3 text-center">
                    <a asp-action="Index">Eğitmen Listesine Dön</a>
                </div>

            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
