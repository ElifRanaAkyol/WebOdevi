@model WebOdevi.Models.Trainer

@{
    ViewData["Title"] = "Trainer Oluştur";
}

<h1>Trainer Oluştur</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="fullName" class="control-label"></label>
                <input asp-for="fullName" class="form-control" />
                <span asp-validation-for="fullName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="fitnessCenterId" class="control-label"></label>
                <select asp-for="fitnessCenterId"
                        class="form-control"
                        asp-items="ViewBag.fitnessCenterId"></select>
                <span asp-validation-for="fitnessCenterId" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Oluştur" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Trainer Listesine Dön</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
