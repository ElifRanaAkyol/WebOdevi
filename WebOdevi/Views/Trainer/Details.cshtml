@using System.Security.Claims
@model WebOdevi.Models.TrainerAppointmentVM
@{
    ViewData["Title"] = "Eğitmen Detayı";
}

<div class="container mt-4" style="margin-top:120px; padding:90px 20px;">
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger mt-3">
            @TempData["Error"]
        </div>
    }

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success mt-3">
            @TempData["Success"]
        </div>
    }
    <div class="card shadow-lg">
        <div class="row g-0">
            <div class="" style=" padding:0px 10px;">
                <a asp-action="Index" class="btn btn-secondary mt-3">Geri Dön</a>
            </div>

            <div class="col-md-4 text-center p-4">
                <img src="~/images/Trainers/trainer1.png"
                     alt="@Model.Trainer.FullName"
                     class="img-fluid rounded-circle mb-3"
                     style="max-width:200px;" />
                <h4>@Model.Trainer.FullName</h4>
                <p class="text-muted">@Model.Trainer.FitnessCenter?.Name</p>
            </div>

            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">Uzmanlık Alanları</h5>
                    @if (Model.Trainer.TrainerSpecializations != null && Model.Trainer.TrainerSpecializations.Any())
                    {
                        <ul>
                            @foreach (var spec in Model.Trainer.TrainerSpecializations)
                            {
                                <li>@spec.Specialization.Name</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted">Uzmanlık bilgisi yok.</p>
                    }

                    <hr />

                    <h5 class="card-title">Hizmetler</h5>
                    @if (Model.TrainerServices != null && Model.TrainerServices.Any())
                    {
                        <ul>
                            @foreach (var service in Model.TrainerServices)
                            {
                                <li>@service.Service.Name</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted">Hizmet bilgisi yok.</p>
                    }

                    <hr />

                    <h5 class="card-title">Müsaitlik</h5>
                    @if (Model.Trainer.TrainerAvailability != null && Model.Trainer.TrainerAvailability.Any())
                    {
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Gün</th>
                                    <th>Saat</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>

                                    <td>Pazartesi</td>
                                    <td>

                                        @foreach (var avail in Model.Trainer.TrainerAvailability)
                                        {
                                            @if (@avail.DayOfWeek == WebOdevi.Data.Enums.DaysOfWeek.pazartesi)
                                            {
                                                <span> @avail.Hour</span>

                                                <span> - </span>
                                            }
                                        }
                                    </td>
                                </tr>
                                <tr>

                                    <td>Salı</td>
                                    <td>

                                        @foreach (var avail in Model.Trainer.TrainerAvailability)
                                        {
                                            @if (@avail.DayOfWeek == WebOdevi.Data.Enums.DaysOfWeek.sali)
                                            {
                                                <span> @avail.Hour</span>

                                                <span> - </span>
                                            }
                                        }
                                    </td>
                                </tr>
                                <tr>

                                    <td>Çarşamba</td>
                                    <td>

                                        @foreach (var avail in Model.Trainer.TrainerAvailability)
                                        {
                                            @if (@avail.DayOfWeek == WebOdevi.Data.Enums.DaysOfWeek.carsamba)
                                            {
                                                <span> @avail.Hour</span>

                                                <span> - </span>
                                            }
                                        }
                                    </td>
                                </tr>
                                <tr>

                                    <td>Perşembe</td>
                                    <td>

                                        @foreach (var avail in Model.Trainer.TrainerAvailability)
                                        {
                                            @if (@avail.DayOfWeek == WebOdevi.Data.Enums.DaysOfWeek.persembe)
                                            {
                                                <span> @avail.Hour</span>

                                                <span> - </span>
                                            }
                                        }
                                    </td>
                                </tr>
                                <tr>

                                    <td>Cuma</td>
                                    <td>

                                        @foreach (var avail in Model.Trainer.TrainerAvailability)
                                        {
                                            @if (@avail.DayOfWeek == WebOdevi.Data.Enums.DaysOfWeek.cuma)
                                            {
                                                <span> @avail.Hour</span>

                                                <span> - </span>
                                            }
                                        }
                                    </td>
                                </tr>
                                <tr>

                                    <td>Cumartesi</td>
                                    <td>

                                        @foreach (var avail in Model.Trainer.TrainerAvailability)
                                        {
                                            @if (@avail.DayOfWeek == WebOdevi.Data.Enums.DaysOfWeek.cumartesi)
                                            {
                                                <span> @avail.Hour</span>

                                                <span> - </span>
                                            }
                                        }
                                    </td>
                                </tr>
                                <tr>

                                    <td>Pazar</td>
                                    <td>

                                        @foreach (var avail in Model.Trainer.TrainerAvailability)
                                        {
                                            @if (@avail.DayOfWeek == WebOdevi.Data.Enums.DaysOfWeek.pazar)
                                            {
                                                <span> @avail.Hour</span>

                                                <span> - </span>
                                            }
                                        }
                                    </td>
                                </tr>

                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted">Müsaitlik bilgisi yok.</p>
                    }

                   
                </div>
                @if (!User.Identity.IsAuthenticated)
{
                <div class="alert">
                    <a asp-controller="Account"
                       asp-action="Login"
                       asp-route-returnUrl="@Context.Request.Path"
                       class="text-decoration-none fw-bold">
                        Giriş yapmadan randevu alamazsınız. Giriş yapmak için tıklayın.
                    </a>
                </div>
                }
                else if(User.IsInRole("User"))
                {
                <form asp-controller="Appointment"
                      asp-action="Create"
                      method="post">
                    <h3>Randevu Al</h3>
                    <div class="date-box">
                        <a>Gün Seçiniz</a>

                        <div class="form-group mb-3">
                            <select asp-for="Appointment.DayOfWeek"
                                    class="form-control"
                                    asp-items="ViewBag.DaysOfWeek">
                                <option value="">Günler</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Appointment.Hour">Saat</label>
                        <select asp-for="Appointment.Hour" class="form-control">
                            <option value="">Saat Seçiniz</option>
                            <option value="09:00">09:00</option>
                            <option value="10:00">10:00</option>
                            <option value="11:00">11:00</option>
                            <option value="12:00">12:00</option>
                            <option value="13:00">13:00</option>
                            <option value="14:00">14:00</option>
                            <option value="15:00">15:00</option>
                            <option value="16:00">16:00</option>
                            <option value="17:00">17:00</option>
                            <option value="18:00">18:00</option>
                            <option value="19:00">19:00</option>
                            <option value="20:00">20:00</option>
                        </select>
                    </div>


                        <div class="mb-3">
                            <label for="SelectedServiceId">Hizmet Seçiniz</label>
                            @if (Model.TrainerServices != null && Model.TrainerServices.Any())
                            {
                                <select id="SelectedServiceId" name="SelectedServiceId" class="form-select">
                                    <option value="">Hizmetler</option>
                                    @foreach (var ts in Model.TrainerServices)
                                    {
                                        <option value="@ts.Service.Id">@ts.Service.Name @ts.Service.trainingFee TL</option>
                                    }
                                </select>
                            }
                            else
                            {
                                <p class="text-muted">Hizmet bilgisi yok.</p>
                            }
                        </div>
                        <input type="hidden" name="Appointment.UserId" value="@User.FindFirstValue(System.Security.Claims.ClaimTypes.NameIdentifier)" />
                        <input type="hidden" name="Appointment.TrainerId" value="@Model.Trainer.Id" />

                        <div class="mb-5 mt-4">
                            <button type="submit" class="btn btn-primary w-100 mt-3">Kaydet</button>

                        </div>  
                </form>

           }
        </div>
    </div>
</div>
</div>