@model IEnumerable<WebOdevi.Models.Trainer>

@{
    ViewData["Title"] = "Trainer";
}

<div class="row" style="background-color:white; margin-top:120px; padding:40px 20px; border-radius:12px;">
    <div class="col-md-8 offset-md-2">
        <table class="table table-bordered" style="background-color:white;">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.ProfileImageUrl)</th>
                    <th>@Html.DisplayNameFor(model => model.FullName)</th>
                    <th>@Html.DisplayNameFor(model => model.FitnessCenter.Name)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.ProfileImageUrl" alt="@item.FullName" style="max-width:150px" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.FitnessCenter.Name)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i> Detaylar</a>
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i> Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
