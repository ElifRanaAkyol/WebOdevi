@model IEnumerable<WebOdevi.Models.Trainer>

@{
    ViewData["Title"] = "Trainer";
}

<div class="container mt-5" style="margin-top:120px; padding:60px 20px;">

    <div class="row justify-content-center">
        @if (Model.Any())
        {
            @foreach (var item in Model)
            {
                <div class="col-xl-4 col-lg-4 col-md-6 col-sm-6 mb-4">
                    <div class="card h-100 shadow-lg border-0 trainer-card">
                        <div class="card-body text-center">
                            <img class="rounded-circle mb-3 trainer-img"
                                 src="~/images/Trainers/trainer1.png"
                                 alt="@item.FullName"
                                 style="width: 150px; height: 150px; object-fit: cover; border: 4px solid #007bff;" />

                            <h5 class="card-title text-dark">@item.FullName</h5>
                            <p class="card-text text-muted">
                                <i class="bi bi-geo-alt-fill"></i>
                                 <strong>@item.FitnessCenter.Name</strong>
                            </p>

                            <hr class="my-3" />

                            <div class="d-flex justify-content-center flex-wrap gap-2">
                                <a class="btn btn-outline-info btn-sm flex-fill" asp-action="Details" asp-route-id="@item.Id">
                                    <i class="bi bi-info-circle"></i> Detaylar
                                </a>

                                @if (User.IsInRole("Admin"))
                                {
                                    <a class="btn btn-outline-primary btn-sm flex-fill" asp-action="Edit" asp-route-id="@item.Id">
                                        <i class="bi bi-pencil-square"></i> Düzenle
                                    </a>
                                    <a class="btn btn-danger btn-sm flex-fill" asp-action="Delete" asp-route-id="@item.Id">
                                        <i class="bi bi-trash"></i> Sil
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-warning text-center" role="alert">
                    Listelenecek eğitmen bulunmamaktadır.
                </div>
            </div>
        }
    </div>

    @if (User.IsInRole("Admin"))
    {
        <div class="row mb-5 mt-4">
            <div class="col-12 text-center">
                <a asp-controller="Trainer" asp-action="Create" class="btn btn-success btn-lg shadow">
                    <i class="bi bi-plus-circle-fill"></i> Yeni Eğitmen Ekle
                </a>
            </div>
        </div>
    }
</div>