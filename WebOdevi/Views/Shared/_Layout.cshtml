<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Spor Salonu Uygulaması</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebOdevi.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top custom-nav-shadow">
            <div class="container-fluid container-lg">

                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/FitnessCenter/icon.png" alt="Logo" style="height: 50px; width:auto;">
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                Ana Sayfa
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Trainer" asp-action="Index">
                                 Eğitmenler
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Diet" asp-action="Index">
                                AI Diyet Önerisi
                            </a>
                        </li>

                        
                    </ul>

                    <ul class="navbar-nav">
                        @if(!User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="btn btn-outline-light" asp-area="" asp-controller="Account" asp-action="Login">
                                    Giriş Yap
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-light" asp-area="" asp-controller="Account" asp-action="Register">
                                    Kayıt Ol
                                </a>
                            </li>
                        }
                        else if(User.IsInRole("User"))
                        {
                            <li class="nav-item">
                                <a class="btn btn-outline-light" asp-area="" asp-controller="Account" asp-action="Logout">
                                    Çıkış Yap
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-light" asp-area="" asp-controller="Account" asp-action="MyAppointments">
                                    Randevularım
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-outline-light" asp-area="" asp-controller="Account" asp-action="Logout">
                                    Çıkış Yap
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-light" asp-area="" asp-controller="Account" asp-action="Logout">
                                    Admin Paneli
                                </a>
                            </li>
                        }

                    </ul>

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>